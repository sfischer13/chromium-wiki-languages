{
    "manifest_version": 2,
    "name": "__MSG_extension_name__",
    "version": "2.0.3",

    "default_locale": "en",
    "description": "__MSG_extension_description__",
    "icons": {
        "16": "img/icon_16.png",
        "48": "img/icon_48.png",
        "128": "img/icon_128.png"
    },

    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.wikibooks.org/*",
                "*://*.wikinews.org/*",
                "*://*.wikipedia.org/*",
                "*://*.wikiquote.org/*",
                "*://*.wikisource.org/*",
                "*://*.wikiversity.org/*",
                "*://*.wikivoyage.org/*",
                "*://*.wiktionary.org/*"
            ],
            "js": [
                "lib/jquery/jquery-2.1.3.min.js",
                "js/contentscript.js"
            ]
        }
    ],
    "minimum_chrome_version": "28",
    "offline_enabled": true,
    "options_page": "html/options.html",
    "web_accessible_resources": [
        "html/options.html",
        "img/icon_12.png"
    ]
}
